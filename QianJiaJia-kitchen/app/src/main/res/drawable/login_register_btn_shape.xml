<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="false">
        <shape>
            <solid android:color="#06b7fc"/>
            <corners
                android:topLeftRadius="20px"
                android:bottomLeftRadius="20px"
                android:topRightRadius="30px"
                android:bottomRightRadius="30px"/>
            <padding android:left="3dip" android:top="3dip"
                     android:right="3dip" android:bottom="3dip"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#2cbff9"/>
            <corners
                android:topLeftRadius="20px"
                android:bottomLeftRadius="20px"
                android:topRightRadius="30px"
                android:bottomRightRadius="30px"/>
            <padding android:left="3dip" android:top="3dip"
                     android:right="3dip" android:bottom="3dip"/>
        </shape>
    </item>

</selector>
