<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include
        android:id="@+id/shopping_not_null_include"
        layout="@layout/activity_top_bar"/>

    <LinearLayout
        android:layout_below="@id/shopping_not_null_include"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcv_shopping_not_null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/shopping_not_null_total"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="总金额"
            android:gravity="center"
            android:textSize="16sp"/>
        <View
            android:id="@+id/shopping_not_null_view"
            android:layout_below="@id/shopping_not_null_total"
            style="@style/view_small"/>
        <Button
            android:layout_below="@id/shopping_not_null_view"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="3dp"
            android:background="#0e932e"
            android:text="结算"
            android:textSize="24sp"
            android:textColor="#ffffff"/>
    </RelativeLayout>
</RelativeLayout>