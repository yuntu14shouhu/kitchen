<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <include layout="@layout/activity_top_bar"/>

    <View
        android:id="@+id/view_info_mydata_one"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="50dp"
        android:background="#e1e4e5"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view_info_mydata_one">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_personal_info_mydata"
                style="@style/RlInfoStyle">

                <TextView
                    android:id="@+id/tv_info_mydata_name"
                    style="@style/tv_personal_info_address"
                    android:text="用户名："/>

                <EditText
                    android:id="@+id/et_info_mydata_name"
                    style="@style/et_personal_info_address"
                    android:layout_toRightOf="@id/tv_info_mydata_name"
                    android:hint="请输入用户名称"/>
            </RelativeLayout>

            <View
                style="@style/view_small"/>
            <RelativeLayout
                style="@style/RlInfoStyle">

                <TextView
                    android:id="@+id/tv_info_mydata_nickname"
                    style="@style/tv_personal_info_address"
                    android:text="昵称："/>

                <EditText
                    android:id="@+id/et_info_mydata_nickname"
                    style="@style/et_personal_info_address"
                    android:layout_toRightOf="@id/tv_info_mydata_nickname"
                    android:hint="请输入用户名称"/>
            </RelativeLayout>

            <View
                style="@style/view_small"/>
            <RelativeLayout
                style="@style/RlInfoStyle">

                <TextView
                    android:id="@+id/tv_info_mydata_sex"
                    style="@style/tv_personal_info_address"
                    android:text="性别："/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/tv_info_mydata_sex"
                    android:layout_toEndOf="@id/tv_info_mydata_sex">

                    <RadioGroup
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:id="@+id/radio_group"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <RadioButton
                            android:id="@+id/button1"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:button="@null"
                            android:checked="true"
                            android:drawableRight="@android:drawable/btn_radio"
                            android:paddingLeft="13dp"
                            android:text="男" />

                        <RadioButton
                            android:id="@+id/button2"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:button="@null"
                            android:paddingLeft="13dp"
                            android:drawableRight="@android:drawable/btn_radio"
                            android:text="女" />
                        <RadioButton
                            android:id="@+id/butto3"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:button="@null"
                            android:drawableRight="@android:drawable/btn_radio"
                            android:paddingLeft="13dp"
                            android:text="保密" />

                    </RadioGroup>
                </RelativeLayout>
            </RelativeLayout>

            <View
                style="@style/view_small"/>
            <RelativeLayout
                style="@style/RlInfoStyle">

                <TextView
                    android:id="@+id/tv_info_mydata_birthdate"
                    style="@style/tv_personal_info_address"
                    android:text="出生日期："/>

                <EditText
                    android:id="@+id/et_info_mydata_birthdate"
                    style="@style/et_personal_info_address"
                    android:layout_toRightOf="@id/tv_info_mydata_birthdate"
                    android:hint="请输入用户名称"/>
            </RelativeLayout>

            <View
                style="@style/view_small"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="#ffffff"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_info_mydata_img"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:text="我的头像："
                    android:textColor="#444444"
                    android:textSize="20sp"
                    android:gravity="center_vertical"/>
                <ImageView
                    android:id="@+id/iv_info_mydata_showimg"
                    android:layout_width="140dp"
                    android:layout_height="120dp"
                    android:layout_toRightOf="@id/tv_info_mydata_img"
                    android:src="@drawable/personal_info_bg"/>
                <ImageButton
                    android:id="@+id/ib_personal_info_mydata_addimg"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@id/iv_info_mydata_showimg"
                    android:src="@drawable/ic_personal_info_mydata_addimg"
                    android:background="#ffffff"/>
            </RelativeLayout>

            <View
                style="@style/view_big"/>
            <RelativeLayout
                style="@style/RlInfoStyle">

                <TextView
                    android:id="@+id/tv_info_mydata_email"
                    style="@style/tv_personal_info_address"
                    android:text="email："/>

                <EditText
                    android:id="@+id/et_info_mydata_email"
                    style="@style/et_personal_info_address"
                    android:layout_toRightOf="@id/tv_info_mydata_email"
                    android:hint="请输入用户名称"
                    android:inputType="textEmailAddress"/>
            </RelativeLayout>

            <View
                style="@style/view_small"/>
            <RelativeLayout
                style="@style/RlInfoStyle">

                <TextView
                    android:id="@+id/tv_info_mydata_phone"
                    style="@style/tv_personal_info_address"
                    android:text="手机号码："/>

                <EditText
                    android:id="@+id/et_info_mydata_phone"
                    style="@style/et_personal_info_address"
                    android:layout_toRightOf="@id/tv_info_mydata_phone"
                    android:hint="请输入用户名称"
                    android:inputType="phone"/>
            </RelativeLayout>

            <View
                style="@style/view_small"/>
            <RelativeLayout
                style="@style/RlInfoStyle">

                <TextView
                    android:id="@+id/tv_info_mydata_qq"
                    style="@style/tv_personal_info_address"
                    android:text="qq号码："/>

                <EditText
                    android:id="@+id/et_info_mydata_qq"
                    style="@style/et_personal_info_address"
                    android:layout_toRightOf="@id/tv_info_mydata_qq"
                    android:hint="请输入用户名称"
                    android:inputType="number"/>
            </RelativeLayout>

            <View
                style="@style/view_big"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>