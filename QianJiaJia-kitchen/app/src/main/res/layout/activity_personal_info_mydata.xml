<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/activity_top_bar" />

    <View
        android:id="@+id/view_info_mydata_one"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#e1e4e5"/>

    <ScrollView
        android:layout_below="@id/view_info_mydata_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rl_personal_info_mydata"
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:background="#ffffff"
                android:layout_gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_info_mydata_name"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:text="用户名："
                    android:textColor="#444444"
                    android:textSize="20sp"
                    android:gravity="center_vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_toRightOf="@id/tv_info_mydata_name"
                    android:hint="请输入用户名称"
                    android:textColor="#2c2c2c"
                    android:textSize="20sp"
                    android:gravity="center_vertical"/>
                <View
                    android:id="@+id/view_info_mydata_two"
                    android:layout_below="@id/tv_info_mydata_name"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="#e1e4e5"/>
                <TextView
                    android:layout_below="@id/tv_info_mydata_name"
                    android:id="@+id/tv_info_mydata_nickname"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:text="用户昵称："
                    android:textColor="#444444"
                    android:textSize="20sp"
                    android:gravity="center_vertical"/>
                <TextView
                    android:layout_below="@id/tv_info_mydata_name"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_toRightOf="@id/tv_info_mydata_nickname"
                    android:hint="请输入用户昵称"
                    android:textColor="#2c2c2c"
                    android:textSize="20sp"
                    android:gravity="center_vertical"/>
                <View
                    android:id="@+id/view_info_mydata_three"
                    android:layout_below="@id/tv_info_mydata_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="#e1e4e5"/>
                <TextView
                    android:layout_below="@id/view_info_mydata_three"
                    android:id="@+id/tv_info_mydata_sex"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:text="性别："
                    android:textColor="#444444"
                    android:textSize="20sp"
                    android:gravity="center_vertical"/>
                <!--<TextView-->
                    <!--android:layout_below="@id/view_info_mydata_three"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="60dp"-->
                    <!--android:layout_toRightOf="@id/tv_info_mydata_sex"-->
                    <!--android:hint="请输入用户性别"-->
                    <!--android:textColor="#2c2c2c"-->
                    <!--android:textSize="20sp"-->
                    <!--android:gravity="center_vertical"/>-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@id/view_info_mydata_four"
                    android:layout_below="@+id/view_info_mydata_three"
                    android:layout_toRightOf="@id/tv_info_mydata_sex"
                    android:layout_toEndOf="@id/tv_info_mydata_sex">

                    <RadioGroup
                        android:id="@+id/radio_group"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <RadioButton
                            android:id="@+id/button1"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:button="@null"
                            android:checked="true"
                            android:drawableRight="@android:drawable/btn_radio"
                            android:paddingLeft="13dp"
                            android:text="男" />

                        <RadioButton
                            android:id="@+id/button2"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:button="@null"
                            android:paddingLeft="13dp"
                            android:drawableRight="@android:drawable/btn_radio"
                            android:text="女" />
                        <RadioButton
                            android:id="@+id/butto3"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:button="@null"
                            android:drawableRight="@android:drawable/btn_radio"
                            android:paddingLeft="13dp"
                            android:text="保密" />

                    </RadioGroup>
                </RelativeLayout>


                <View
                    android:id="@+id/view_info_mydata_four"
                    android:layout_below="@id/tv_info_mydata_sex"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="#e1e4e5"/>
                <TextView
                    android:id="@+id/tv_info_mydata_birthdate"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:text="出生日期："
                    android:textColor="#444444"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:layout_below="@+id/view_info_mydata_four"/>
                <TextView
                    android:layout_below="@id/view_info_mydata_four"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_toRightOf="@id/tv_info_mydata_birthdate"
                    android:hint="请输入用户出生日期"
                    android:textColor="#2c2c2c"
                    android:textSize="20sp"
                    android:gravity="center_vertical"/>
                <View
                    android:id="@+id/view_info_mydata_five"
                    android:layout_below="@id/tv_info_mydata_birthdate"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="#e1e4e5"/>
                <TextView
                    android:layout_below="@id/view_info_mydata_five"
                    android:id="@+id/tv_info_mydata_img"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:text="我的头像："
                    android:textColor="#444444"
                    android:textSize="20sp"
                    android:gravity="center_vertical"/>
                <ImageView
                    android:id="@+id/iv_info_mydata_img"
                    android:layout_below="@id/view_info_mydata_five"
                    android:layout_width="140dp"
                    android:layout_height="120dp"
                    android:layout_toRightOf="@id/tv_info_mydata_img"
                    android:src="@drawable/personal_info_bg"/>
                <ImageButton
                    android:layout_below="@id/view_info_mydata_five"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@id/iv_info_mydata_img"
                    android:src="@drawable/ic_personal_info_mydata_addimg"
                    android:background="#ffffff"/>
            </RelativeLayout>
            <View
                android:id="@+id/view_info_mydata_six"
                android:layout_below="@id/rl_personal_info_mydata"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#e1e4e5"/>
            <RelativeLayout
                android:id="@+id/rl_personal_info_mydata_other"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_info_mydata_email"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:text="邮箱："
                    android:textColor="#444444"
                    android:textSize="20sp"
                    android:gravity="center_vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_toRightOf="@id/tv_info_mydata_email"
                    android:hint="请输入您的邮箱"
                    android:textColor="#2c2c2c"
                    android:textSize="20sp"
                    android:gravity="center_vertical"/>
                <View
                    android:id="@+id/view_info_mydata_seven"
                    android:layout_below="@id/tv_info_mydata_email"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="#e1e4e5"/>
                <TextView
                    android:layout_below="@id/view_info_mydata_seven"
                    android:id="@+id/tv_info_mydata_phone"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:text="手机号码："
                    android:textColor="#444444"
                    android:textSize="20sp"
                    android:gravity="center_vertical"/>
                <TextView
                    android:layout_below="@id/view_info_mydata_seven"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_toRightOf="@id/tv_info_mydata_phone"
                    android:hint="请输入您的手机号码"
                    android:textColor="#2c2c2c"
                    android:textSize="20sp"
                    android:gravity="center_vertical"/>
                <View
                    android:id="@+id/view_info_mydata_eight"
                    android:layout_below="@id/tv_info_mydata_phone"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="#e1e4e5"/>
                <TextView
                    android:layout_below="@id/view_info_mydata_eight"
                    android:id="@+id/tv_info_mydata_qq"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:text="QQ号码："
                    android:textColor="#444444"
                    android:textSize="20sp"
                    android:gravity="center_vertical"/>
                <TextView
                    android:layout_below="@id/view_info_mydata_eight"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_toRightOf="@id/tv_info_mydata_qq"
                    android:hint="请输入您的QQ号码"
                    android:textColor="#2c2c2c"
                    android:textSize="20sp"
                    android:gravity="center_vertical"/>
                <View
                    android:id="@+id/view_info_mydata_nine"
                    android:layout_below="@id/tv_info_mydata_qq"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="#e1e4e5"/>

            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>