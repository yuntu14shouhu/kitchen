<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/top_search"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_margin="15dp"
        android:background="@drawable/fragment_sort_search_shape"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_search" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="请输入搜索商品的关键字"
            android:textSize="15sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/top_search"
        android:background="@color/con_blue" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/divider"
        android:background="@color/con_font_gray2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:divider="@drawable/divider_shape"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:showDividers="middle|end">


            <LinearLayout
                android:id="@+id/ll_shuCai"
                android:layout_width="match_parent"
                android:layout_marginTop="-2dp"
                android:layout_height="50dp"
                android:background="@android:color/white"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img_shuCai"
                    android:layout_width="5dp"
                    android:layout_height="25dp"
                    android:background="@color/con_yellow" />

                <TextView
                    android:id="@+id/tv_shuCai"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray"
                    android:gravity="center"
                    android:text="蔬菜"
                    android:textSize="15sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_shuiGuo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/white"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img_shuiGuo"
                    android:layout_width="5dp"
                    android:layout_height="25dp"
                    android:background="@color/con_yellow" />

                <TextView
                    android:id="@+id/tv_shuiGuo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:text="水果"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_rouLei"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/white"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img_rouLei"
                    android:layout_width="5dp"
                    android:layout_height="25dp"
                    android:background="@color/con_yellow" />

                <TextView
                    android:id="@+id/tv_rouLei"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:text="肉类"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_qinDan"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/white"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img_qinDan"
                    android:layout_width="5dp"
                    android:layout_height="25dp"
                    android:background="@color/con_yellow" />

                <TextView
                    android:id="@+id/tv_qinDan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:text="禽蛋"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_shuiChan"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/white"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img_shuiChan"
                    android:layout_width="5dp"
                    android:layout_height="25dp"
                    android:background="@color/con_yellow" />

                <TextView
                    android:id="@+id/tv_shuiChan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:text="水产"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_liangYou"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/white"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img_liangYou"
                    android:layout_width="5dp"
                    android:layout_height="25dp"
                    android:background="@color/con_yellow" />

                <TextView
                    android:id="@+id/tv_liangYou"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:text="粮油副食"
                    android:textSize="15sp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_marginLeft="7dp"
            android:layout_marginStart="7dp"
            android:background="@android:color/white"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcy_sort"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>