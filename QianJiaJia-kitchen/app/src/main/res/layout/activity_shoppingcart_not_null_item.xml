<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_shop_not_null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_shopping_nou_null"
                android:layout_margin="3dp"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:text="Kitchen"
                android:background="#0e932e"
                android:textColor="#ffffff"
                android:gravity="center"
                android:textSize="16sp"/>
            <TextView
                android:layout_toRightOf="@id/tv_shopping_nou_null"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="Kitchen发货"
                android:textSize="18sp"
                android:layout_margin="3dp"
                android:gravity="center"/>
        </RelativeLayout>
        <View
            style="@style/view_small"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcv_shopping_not_null_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:layout_below="@id/ll_shop_not_null"
        android:id="@+id/view_shop_not_null_item"
        style="@style/view_small"/>
    <RelativeLayout
        android:layout_below="@id/view_shop_not_null_item"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/tv_total_shop_not_null_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_personal_money"
            android:layout_toLeftOf="@id/tv_total_shop_not_null_item"
            android:layout_margin="2dp"/>

    </RelativeLayout>

    
</RelativeLayout>