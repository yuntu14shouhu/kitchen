<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_shopping_item"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="140dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_product_shop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_shoppingcart_product"
                android:layout_margin="5dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="30dp"
                android:id="@+id/tv_product_name_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="麒麟瓜"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"/>
            <RelativeLayout

                android:layout_below="@id/tv_product_name_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp">
                <ImageView
                    android:id="@+id/iv_plus_shop"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_shopping_minus"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="5dp"/>
                <TextView
                    android:layout_toRightOf="@id/iv_plus_shop"
                    android:id="@+id/tv_number_shop"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:text="1"
                    android:textSize="22sp"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"/>
                <ImageView
                    android:layout_toRightOf="@id/tv_number_shop"
                    android:id="@+id/iv_minus_shop"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_shopping_minus"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="5dp"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="30dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">
                <ImageView
                    android:layout_alignParentLeft="true"
                    android:id="@+id/tv_one_product_money_shop"
                    android:layout_width="20dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="50dp"
                    android:src="@drawable/ic_money_shop"
                    android:layout_marginRight="2dp"/>
                <TextView
                    android:layout_toRightOf="@id/tv_one_product_money_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:text="106"
                    android:textSize="16sp"
                    android:gravity="center"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_cha_shop"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="40dp"/>
                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>