            <View
                style="@style/view_big"/>

            <RelativeLayout
                style="@style/RlInfoStyle">

                <TextView
                    android:id="@+id/info_mydata_email"
                    style="@style/tv_personal_info_address"
                    android:text="email："/>

                <TextView
                    android:id="@+id/tv_info_mydata_email"
                    style="@style/et_personal_info_address"
                    android:layout_toRightOf="@id/info_mydata_email"
                    android:hint="请输入用户名称"
                    android:inputType="textEmailAddress"/>
            </RelativeLayout>

            <View
                style="@style/view_small"/>

            <RelativeLayout
                style="@style/RlInfoStyle">

                <TextView
                    android:id="@+id/info_mydata_phone"
                    style="@style/tv_personal_info_address"
                    android:text="手机号码："/>

                <TextView
                    android:id="@+id/tv_info_mydata_phone"
                    style="@style/et_personal_info_address"
                    android:layout_toRightOf="@id/info_mydata_phone"
                    android:hint="请输入用户名称"
                    android:inputType="phone"/>
            </RelativeLayout>

            <View
