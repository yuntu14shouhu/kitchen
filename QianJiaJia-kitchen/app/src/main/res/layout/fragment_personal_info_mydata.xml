<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#0e932e"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ib_personal_info_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dis_add_bt"
            android:src="@drawable/ic_back_light"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:background="#00000000"/>

        <FrameLayout
            android:id="@+id/fl_personal_info_mydata"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1.5">

            <TextView
                android:id="@+id/tv_personal_info_mydata"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="编辑"
                android:textColor="#ffffff"/>

        </FrameLayout>
    </LinearLayout>

    <View
        android:id="@+id/view_info_mydata_one"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="50dp"
        android:background="#e1e4e5"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view_info_mydata_one">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_personal_info_mydata"
                style="@style/RlInfoStyle">

                <TextView
                    android:id="@+id/info_mydata_name"
                    style="@style/tv_personal_info_address"
                    android:text="用户名："/>

                <TextView
                    android:id="@+id/tv_info_mydata_name"
                    style="@style/et_personal_info_address"
                    android:layout_toRightOf="@id/info_mydata_name"
                    android:hint="请输入用户名称"/>
            </RelativeLayout>

            <View
                style="@style/view_small"/>

            <RelativeLayout
                style="@style/RlInfoStyle">

                <TextView
                    android:id="@+id/info_mydata_nickname"
                    style="@style/tv_personal_info_address"
                    android:text="昵称："/>

                <TextView
                    android:id="@+id/tv_info_mydata_nickname"
                    style="@style/et_personal_info_address"
                    android:layout_toRightOf="@id/info_mydata_nickname"
                    android:hint="请输入用户名称"/>
            </RelativeLayout>

            <View
                style="@style/view_small"/>

            <RelativeLayout
                style="@style/RlInfoStyle">

                <TextView
                    android:id="@+id/info_mydata_sex"
                    style="@style/tv_personal_info_address"
                    android:text="性别："/>

                <TextView
                    android:id="@+id/tv_info_mydata_sex"
                    style="@style/et_personal_info_address"
                    android:layout_toRightOf="@id/info_mydata_sex"
                    android:hint="请输入用户名称"
                    android:inputType="textEmailAddress"/>


            </RelativeLayout>

            <View
                style="@style/view_small"/>

            <RelativeLayout
                style="@style/RlInfoStyle">

                <TextView
                    android:id="@+id/info_mydata_birthdate"
                    style="@style/tv_personal_info_address"
                    android:text="年龄："/>

                <TextView
                    android:id="@+id/tv_info_mydata_birthdate"
                    style="@style/et_personal_info_address"
                    android:layout_toRightOf="@id/info_mydata_birthdate"
                    android:hint="请输入用户名称"
                    android:inputType="number"/>
            </RelativeLayout>

