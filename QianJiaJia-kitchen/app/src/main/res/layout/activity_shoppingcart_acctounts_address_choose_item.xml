<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:background="#ffffff">
            <RadioButton
                android:id="@+id/radio_choose"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="7dp"/>
            <RelativeLayout
                android:layout_toRightOf="@id/radio_choose"
                android:id="@+id/rl_choose_address"
                android:layout_width="252dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="4dp"
                    android:id="@+id/tv_choose_address_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="qianjiajia"
                    android:textColor="#444444"
                    android:textSize="14sp"/>
                <TextView
                    android:textColor="#444444"
                    android:layout_marginTop="2dp"
                    android:layout_below="@id/tv_choose_address_name"
                    android:id="@+id/tv_choose_address_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1848217219"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#0e932e"
                    android:textSize="14sp"
                    android:text="["
                    android:id="@+id/tv_choose_tv"
                    android:layout_marginTop="2dp"
                    android:layout_below="@id/tv_choose_address_phone"/>

                <TextView
                    android:id="@+id/tv_choose_address_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#0e932e"
                    android:textSize="14sp"
                    android:text="公司"
                    android:layout_toRightOf="@+id/tv_choose_tv"
                    android:layout_marginTop="2dp"
                    android:layout_below="@id/tv_choose_address_phone"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#0e932e"
                    android:textSize="14sp"
                    android:text="]"
                    android:layout_toRightOf="@+id/tv_choose_address_type"
                    android:layout_marginTop="2dp"
                    android:layout_below="@id/tv_choose_address_phone"/>
                <TextView
                    android:textColor="#444444"
                    android:layout_marginTop="2dp"
                    android:layout_below="@id/tv_choose_address_phone"
                    android:id="@+id/tv_choose_address_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:text="四川省成都市武侯区高升桥东路肖家河街道"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_choose_edit_address"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true">

                <TextView
                    android:textColor="#444444"
                    android:id="@+id/tv_choose_edit_address"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="编辑"
                    android:onClick="chooseEditClick"
                    android:layout_marginRight="12dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/rl_choose_edit_address">
                <ImageView
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_personal_terval_line_light"/>
            </RelativeLayout>
        </RelativeLayout>

        <View
            style="@style/view_small"/>
    </LinearLayout>

</LinearLayout>