<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include
                android:id="@+id/include_order_details"
                layout="@layout/activity_top_bar" />
            <View
                android:id="@+id/view7_order_details"
                android:layout_below="@id/include_order_details"
                style="@style/view_small"/>
            <RelativeLayout
                android:layout_below="@id/view7_order_details"
                android:id="@+id/rl_cancel_order_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_cancel_order_details"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_personal_info_order_cancel"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:id="@+id/tv_cancel_order_details"
                    android:layout_below="@id/iv_cancel_order_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="已取消"
                    android:layout_marginBottom="5dp"
                    android:textColor="#0e932e"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <View
                android:id="@+id/view1_order_details"
                android:layout_below="@id/rl_cancel_order_details"
                style="@style/view_small"/>
            <RelativeLayout
                android:layout_below="@id/view1_order_details"
                android:id="@+id/rl_details_order_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/address_order_details"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:singleLine="true"
                    android:text="四川省成都市一环路南四段16号"
                    android:textSize="14sp"/>
                <View
                    android:layout_below="@id/address_order_details"
                    android:id="@+id/view2_order_details"
                    style="@style/view_small"/>
                <TextView
                    android:layout_below="@id/view2_order_details"
                    android:id="@+id/name_order_details"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="qianjiajia"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/phone_order_details"
                    android:layout_below="@id/view2_order_details"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="18482173219"
                    android:textSize="14sp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"/>
                <View
                    android:layout_below="@id/name_order_details"
                    android:id="@+id/view3_order_details"
                    style="@style/view_small"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rcv_order_details_personal_info"
                    android:layout_below="@id/view3_order_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_below="@id/rcv_order_details_personal_info"
                    android:id="@+id/view4_order_details"
                    style="@style/view_big"/>
                <TextView
                    android:layout_marginTop="2dp"
                    android:id="@+id/tv_number_order_details"
                    android:layout_below="@id/view4_order_details"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="订单编号:"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_below="@id/view4_order_details"
                    android:id="@+id/tv_order_number_order_details"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:layout_toRightOf="@id/tv_number_order_details"
                    android:text="41asasjkdcbsj"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_create_order_details"
                    android:layout_below="@id/tv_number_order_details"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_marginBottom="7dp"
                    android:gravity="center"
                    android:text="创建时间:"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/tv_create_date_order_details"
                    android:layout_below="@id/tv_number_order_details"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:text="2017-03-23 10:49:49"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginBottom="7dp"
                    android:layout_toRightOf="@id/tv_create_order_details"/>

                <View
                    android:id="@+id/view5_order_details"
                    android:layout_below="@id/tv_create_order_details"
                    style="@style/view_big"/>
                <TextView
                    android:layout_marginTop="2dp"
                    android:id="@+id/tv_pay_text_order_details"
                    android:layout_below="@id/view5_order_details"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="商品实付"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_marginTop="2dp"
                    android:id="@+id/tv_pay_order_details"
                    android:layout_below="@id/view5_order_details"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="88.88"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="1dp"
                    android:textSize="14sp"
                    android:layout_alignParentRight="true"/>
                <ImageView
                    android:layout_below="@id/view5_order_details"
                    android:layout_width="18dp"
                    android:layout_height="13dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_personal_info_order_details"
                    android:layout_toLeftOf="@id/tv_pay_order_details"/>
                <TextView
                    android:id="@+id/tv_postage_text_order_details"
                    android:layout_below="@id/tv_pay_text_order_details"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_marginBottom="7dp"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="运费"/>
                <TextView
                    android:id="@+id/tv_postage_order_details"
                    android:layout_below="@id/tv_pay_text_order_details"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_marginBottom="7dp"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="免邮"/>
                <View
                    android:id="@+id/view6_order_details"
                    android:layout_below="@id/tv_postage_text_order_details"
                    style="@style/view_small"/>
                <TextView
                    android:id="@+id/tv_total_order_details"
                    android:layout_below="@id/view6_order_details"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="88.88"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="1dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:textColor="#0e932e"/>
                <ImageView
                    android:id="@+id/iv_total_order_details"
                    android:layout_below="@id/view6_order_details"
                    android:layout_width="18dp"
                    android:layout_height="13dp"
                    android:layout_marginTop="9dp"
                    android:src="@drawable/ic_personal_money"
                    android:layout_toLeftOf="@id/tv_total_order_details"/>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>