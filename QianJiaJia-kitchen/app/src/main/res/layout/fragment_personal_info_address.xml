<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include
        android:id="@+id/address_include"
        layout="@layout/activity_top_bar" />
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:id="@+id/rl_add_address"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <Button
            android:id="@+id/bt_add_address_list"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="#0e932e"
            android:text="新增收货地址"
            android:textColor="#ffffff"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/address_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/address_include"
        android:layout_above="@id/rl_add_address"
        android:dividerHeight="5dp"
        android:cacheColorHint="#00000000"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"></android.support.v7.widget.RecyclerView>

</RelativeLayout>