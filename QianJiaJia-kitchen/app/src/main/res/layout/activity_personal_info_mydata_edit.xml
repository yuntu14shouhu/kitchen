<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <include layout="@layout/activity_top_bar"/>
    <View
        android:id="@+id/view_info_mydata_one"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="50dp"
        android:background="#e1e4e5"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view_info_mydata_one">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_gravity="center_vertical"
                android:background="#ffffff">
                <TextView
                    android:id="@+id/tv_personal_info_mydata1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="请输入您的基本信息:"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:textStyle="bold"/>
            </RelativeLayout>
            <View
                style="@style/view_small"/>
            <RelativeLayout
                android:id="@+id/rl_personal_info_mydata"
                style="@style/RlInfoStyle">

                <TextView
                    android:id="@+id/tv_info_mydata_name_edit"
                    style="@style/tv_personal_info_address"
                    android:text="用\t\t户\t\t名："/>

                <EditText
                    android:id="@+id/et_info_mydata_name_edit"
                    style="@style/et_personal_info_address"
                    android:layout_toRightOf="@id/tv_info_mydata_name_edit"
                    android:hint="请输入用户名称"/>
            </RelativeLayout>

            <View
                style="@style/view_small"/>
            <RelativeLayout
                style="@style/RlInfoStyle">

                <TextView
                    android:id="@+id/tv_info_mydata_nickname_edit"
                    style="@style/tv_personal_info_address"
                    android:text="昵\t\t\t\t\t\t称："/>

                <EditText
                    android:id="@+id/et_info_mydata_nickname_edit"
                    style="@style/et_personal_info_address"
                    android:layout_toRightOf="@id/tv_info_mydata_nickname_edit"
                    android:hint="请输入用户名称"/>
            </RelativeLayout>

            <View
                style="@style/view_small"/>
            <RelativeLayout
                style="@style/RlInfoStyle">

                <TextView
                    android:id="@+id/tv_info_mydata_sex_edit"
                    style="@style/tv_personal_info_address"
                    android:text="性\t\t\t\t\t\t别："/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/tv_info_mydata_sex_edit"
                    android:layout_toEndOf="@id/tv_info_mydata_sex_edit">

                    <RadioGroup
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:id="@+id/radio_group"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <RadioButton
                            android:id="@+id/button1"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:button="@null"
                            android:drawableRight="@android:drawable/btn_radio"
                            android:paddingLeft="13dp"
                            android:text="男" />

                        <RadioButton
                            android:id="@+id/button2"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:button="@null"
                            android:checked="true"
                            android:paddingLeft="13dp"
                            android:drawableRight="@android:drawable/btn_radio"
                            android:text="女" />
                    </RadioGroup>
                </RelativeLayout>
            </RelativeLayout>

            <View
                style="@style/view_small"/>
            <RelativeLayout
                style="@style/RlInfoStyle">

                <TextView
                    android:id="@+id/tv_info_mydata_birthdate_edit"
                    style="@style/tv_personal_info_address"
                    android:text="年\t\t\t\t\t\t龄："/>

                <EditText
                    android:id="@+id/et_info_mydata_birthdate_edit"
                    style="@style/et_personal_info_address"
                    android:layout_toRightOf="@id/tv_info_mydata_birthdate_edit"
                    android:hint="请输入用户名称"
                    android:inputType="number"/>
            </RelativeLayout>

