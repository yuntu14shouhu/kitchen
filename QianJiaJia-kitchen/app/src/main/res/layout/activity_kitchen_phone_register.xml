<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/activity_top_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d8e0e8">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">

            <EditText
                android:id="@+id/et_login_register_phone"
                style="?android:attr/textViewStyle"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="@drawable/login__register_et_selector"
                android:gravity="center"
                android:hint="请输入11位手机号码"/>

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/login__register_et_selector">

                <EditText
                    android:id="@+id/et_login_register_identifyingcode"
                    style="?android:attr/textViewStyle"
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请输入验证码"
                    android:gravity="center"/>
                <Button
                    android:id="@+id/btn_login_phoneregister_getcode"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="#00000000"
                    android:textColor="@drawable/login_tx_forgetpw_selector"
                    android:textSize="13sp"
                    android:text="获取验证码"/>
            </RelativeLayout>

            <EditText
                android:id="@+id/et_login_phoneregister_pw"
                style="?android:attr/textViewStyle"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/login__register_et_selector"
                android:gravity="center"
                android:maxLength="18"
                android:inputType="textPassword"
                android:hint="请输入6~18位密码"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:textSize="11sp"
                android:hint="密码长度为6~18位，由数字字母字符任意两种组成"/>

            <EditText
                android:id="@+id/et_login_phoneregister_pw_agin"
                style="?android:attr/textViewStyle"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/login__register_et_selector"
                android:gravity="center"
                android:maxLength="18"
                android:inputType="textPassword"
                android:hint="请确认密码"/>

            <Button
                android:id="@+id/btn_login_phonelogin_register"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:text="注册"
                android:background="@drawable/login_register_btn_shape"
                android:textColor="#ffffff"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:textSize="11sp"
                android:hint="您点击注册按钮，即代表你同意本协议，感谢您的支持"/>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>