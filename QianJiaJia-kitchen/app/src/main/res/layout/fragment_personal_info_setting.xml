<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/activity_top_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="#00000000"
            android:layout_gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_personal_info_setting_logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:src="@drawable/logo"/>
            <TextView
                android:layout_below="@id/iv_personal_info_setting_logo"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"
                android:text="版本号 V1.0.0"
                android:textColor="#1296db"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="#00000000">
            <TextView
                android:id="@+id/tv_info_setting_update"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:text="检查更新"
                android:textColor="#444444"
                android:textSize="20sp"/>
            <View
                android:id="@+id/view_info_setting_one"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_below="@id/tv_info_setting_update"
                android:background="#e1e4e5"/>
            <TextView
                android:layout_below="@id/view_info_setting_one"
                android:id="@+id/tv_info_setting_clean"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:text="清除缓存"
                android:textColor="#444444"
                android:textSize="20sp"/>
            <View
                android:id="@+id/view_info_setting_two"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_below="@id/tv_info_setting_clean"
                android:background="#e1e4e5"/>
            <TextView
                android:layout_below="@id/view_info_setting_two"
                android:id="@+id/tv_info_setting_reader"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:text="关于Kitchen"
                android:textColor="#444444"
                android:textSize="20sp"/>
            <View
                android:id="@+id/view_info_setting_three"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_below="@id/tv_info_setting_reader"
                android:background="#e1e4e5"/>

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>